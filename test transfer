                    ]
                }
            ],
            deletedCount: 0
        };
        
        // ===== –°–û–°–¢–û–Ø–ù–ò–ï =====
        let scheduleData = loadData();
        let editMode = false;
        let currentEditCity = null;
        let currentEditDate = null;
        
        // ===== –ó–ê–ì–†–£–ó–ö–ê/–°–û–•–†–ê–ù–ï–ù–ò–ï –î–ê–ù–ù–´–• =====
        function loadData() {
            const saved = localStorage.getItem('scheduleData');
            if (saved) {
                return JSON.parse(saved);
            }
            return JSON.parse(JSON.stringify(DEFAULT_DATA));
        }
        
        function saveData() {
            localStorage.setItem('scheduleData', JSON.stringify(scheduleData));
        }
        
        function resetToDefault() {
            if (confirm('–í—ã —É–≤–µ—Ä–µ–Ω—ã? –í—Å–µ –∏–∑–º–µ–Ω–µ–Ω–∏—è –±—É–¥—É—Ç –ø–æ—Ç–µ—Ä—è–Ω—ã –∏ –¥–∞–Ω–Ω—ã–µ –≤–µ—Ä–Ω—É—Ç—Å—è –∫ –∏—Å—Ö–æ–¥–Ω—ã–º.')) {
                scheduleData = JSON.parse(JSON.stringify(DEFAULT_DATA));
                saveData();
                renderSchedule();
                showNotification('–î–∞–Ω–Ω—ã–µ —Å–±—Ä–æ—à–µ–Ω—ã –∫ –∏—Å—Ö–æ–¥–Ω—ã–º', 'info');
            }
        }
        
        // ===== –§–û–†–ú–ê–¢–ò–†–û–í–ê–ù–ò–ï –î–ê–¢ =====
        function formatDate(dateStr) {
            const date = new Date(dateStr);
            const day = String(date.getDate()).padStart(2, '0');
            const month = String(date.getMonth() + 1).padStart(2, '0');
            const year = date.getFullYear();
            return `${day}.${month}.${year}`;
        }
        
        function isYear2026(dateStr) {
            return dateStr.startsWith('2026');
        }
        
        // ===== –ü–†–û–í–ï–†–ö–ê –ò –£–î–ê–õ–ï–ù–ò–ï –ü–†–û–°–†–û–ß–ï–ù–ù–´–• =====
        function removeExpiredDates() {
            const today = new Date();
            today.setHours(0, 0, 0, 0);
            let removedCount = 0;
            
            scheduleData.cities.forEach(city => {
                const originalLength = city.dates.length;
                city.dates = city.dates.filter(date => {
                    const fromDate = new Date(date.from);
                    fromDate.setHours(0, 0, 0, 0);
                    return fromDate >= today;
                });
                removedCount += originalLength - city.dates.length;
            });
            
            if (removedCount > 0) {
                scheduleData.deletedCount += removedCount;
                saveData();
                renderSchedule();
                updateDeletedCounter();
                showNotification(`–£–¥–∞–ª–µ–Ω–æ ${removedCount} –ø—Ä–æ—Å—Ä–æ—á–µ–Ω–Ω—ã—Ö –æ—Ç–≥—Ä—É–∑–æ–∫`, 'info');
            }
            
            return removedCount;
        }
        
        function updateDeletedCounter() {
            const counter = document.getElementById('deletedCounter');
            const countEl = document.getElementById('deletedCount');
            if (scheduleData.deletedCount > 0) {
                counter.style.display = 'flex';
                countEl.textContent = scheduleData.deletedCount;
            }
        }
        
        // ===== –†–ï–ù–î–ï–† –†–ê–°–ü–ò–°–ê–ù–ò–Ø =====
        function renderSchedule() {
            const grid = document.getElementById('scheduleGrid');
            grid.innerHTML = '';
            
            scheduleData.cities.forEach(city => {
                const cityEl = document.createElement('div');
                cityEl.className = `city-block${city.dates.length === 0 ? ' empty' : ''}`;
                cityEl.innerHTML = `
                    <div class="city-header${city.special ? ' special' : ''}">
                        <div class="city-title">
                            <span class="icon">${city.icon}</span>
                            <span>${city.name}</span>
                        </div>
                        <button class="add-date-btn" onclick="openAddDateModal(${city.id})" title="–î–æ–±–∞–≤–∏—Ç—å –æ—Ç–≥—Ä—É–∑–∫—É">+</button>
                    </div>
                    <div class="dates-list" id="dates-${city.id}">
                        ${city.dates.length === 0 ? '<div class="no-dates">–ù–µ—Ç –∑–∞–ø–ª–∞–Ω–∏—Ä–æ–≤–∞–Ω–Ω—ã—Ö –æ—Ç–≥—Ä—É–∑–æ–∫</div>' : ''}
                        ${city.dates.map(date => `
                            <div class="date-row" data-city="${city.id}" data-date="${date.id}">
                                <div class="date-info">
                                    <span class="date-from">${formatDate(date.from)}</span>
                                    <span class="arrow">‚Üí</span>
                                    <span class="date-to${isYear2026(date.to) ? ' year-2026' : ''}">${formatDate(date.to)}</span>
                                </div>
                                <div class="row-actions">
                                    <button class="row-btn edit" onclick="openEditDateModal(${city.id}, ${date.id})" title="–†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞—Ç—å">‚úèÔ∏è</button>
                                    <button class="row-btn delete" onclick="deleteDate(${city.id}, ${date.id})" title="–£–¥–∞–ª–∏—Ç—å">üóëÔ∏è</button>
                                </div>
                            </div>
                        `).join('')}
                    </div>
                `;
                grid.appendChild(cityEl);
            });
        }
        
        // ===== –†–ï–ñ–ò–ú –†–ï–î–ê–ö–¢–ò–†–û–í–ê–ù–ò–Ø =====
        function toggleEditMode() {
            editMode = !editMode;
            document.body.classList.toggle('edit-mode', editMode);
            const btn = document.querySelector('.admin-toggle');
            btn.classList.toggle('active', editMode);
            btn.querySelector('.toggle-text').textContent = editMode ? '–í—ã–π—Ç–∏ –∏–∑ —Ä–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏—è' : '–†–µ–∂–∏–º —Ä–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏—è';
            btn.querySelector('span:first-child').textContent = editMode ? '‚úñÔ∏è' : '‚öôÔ∏è';
        }
        
        // ===== –ú–û–î–ê–õ–¨–ù–´–ï –û–ö–ù–ê =====
        function openModal(content) {
            document.getElementById('modal').innerHTML = content;
            document.getElementById('modalOverlay').classList.add('active');
        }
        
        function closeModal() {
            document.getElementById('modalOverlay').classList.remove('active');
            currentEditCity = null;
            currentEditDate = null;
        }
        
        function closeModalOnOverlay(event) {
            if (event.target === document.getElementById('modalOverlay')) {
                closeModal();
            }
        }
        
        // –î–æ–±–∞–≤–ª–µ–Ω–∏–µ –æ—Ç–≥—Ä—É–∑–∫–∏
        function openAddDateModal(cityId) {
            currentEditCity = cityId;
            const city = scheduleData.cities.find(c => c.id === cityId);
            
            openModal(`
                <h3>‚ûï –î–æ–±–∞–≤–∏—Ç—å –æ—Ç–≥—Ä—É–∑–∫—É</h3>
                <p style="color: #666; margin-bottom: 20px;">–ù–∞–ø—Ä–∞–≤–ª–µ–Ω–∏–µ: <strong>${city.name}</strong></p>
                <div class="form-group">
                    <label>–î–∞—Ç–∞ –æ—Ç–ø—Ä–∞–≤–∫–∏</label>
                    <input type="date" id="dateFrom" required>
                </div>
                <div class="form-group">
                    <label>–î–∞—Ç–∞ –¥–æ—Å—Ç–∞–≤–∫–∏</label>
                    <input type="date" id="dateTo" required>
                </div>
                <div class="modal-buttons">
                    <button class="btn btn-secondary" onclick="closeModal()">–û—Ç–º–µ–Ω–∞</button>
                    <button class="btn btn-primary" onclick="addDate()">‚ûï –î–æ–±–∞–≤–∏—Ç—å</button>
                </div>
            `);
        }
        
        function addDate() {
            const from = document.getElementById('dateFrom').value;
            const to = document.getElementById('dateTo').value;
            
            if (!from || !to) {
                showNotification('–ó–∞–ø–æ–ª–Ω–∏—Ç–µ –æ–±–µ –¥–∞—Ç—ã', 'error');
                return;
            }
            
            if (new Date(to) < new Date(from)) {
                showNotification('–î–∞—Ç–∞ –¥–æ—Å—Ç–∞–≤–∫–∏ –Ω–µ –º–æ–∂–µ—Ç –±—ã—Ç—å —Ä–∞–Ω—å—à–µ –¥–∞—Ç—ã –æ—Ç–ø—Ä–∞–≤–∫–∏', 'error');
                return;
            }
            
            const city = scheduleData.cities.find(c => c.id === currentEditCity);
            const newId = city.dates.length > 0 ? Math.max(...city.dates.map(d => d.id)) + 1 : 1;
            
            city.dates.push({ id: newId, from, to });
            city.dates.sort((a, b) => new Date(a.from) - new Date(b.from));
            
            saveData();
            renderSchedule();
            closeModal();
            showNotification('–û—Ç–≥—Ä—É–∑–∫–∞ –¥–æ–±–∞–≤–ª–µ–Ω–∞', 'success');
        }
        
        // –†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ –æ—Ç–≥—Ä—É–∑–∫–∏
        function openEditDateModal(cityId, dateId) {
            currentEditCity = cityId;
            currentEditDate = dateId;
            
            const city = scheduleData.cities.find(c => c.id === cityId);
            const date = city.dates.find(d => d.id === dateId);
            
            openModal(`
                <h3>‚úèÔ∏è –†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞—Ç—å –æ—Ç–≥—Ä—É–∑–∫—É</h3>
                <p style="color: #666; margin-bottom: 20px;">–ù–∞–ø—Ä–∞–≤–ª–µ–Ω–∏–µ: <strong>${city.name}</strong></p>
                <div class="form-group">
                    <label>–î–∞—Ç–∞ –æ—Ç–ø—Ä–∞–≤–∫–∏</label>
                    <input type="date" id="dateFrom" value="${date.from}" required>
                </div>
                <div class="form-group">
                    <label>–î–∞—Ç–∞ –¥–æ—Å—Ç–∞–≤–∫–∏</label>
                    <input type="date" id="dateTo" value="${date.to}" required>
                </div>
                <div class="modal-buttons">
                    <button class="btn btn-secondary" onclick="closeModal()">–û—Ç–º–µ–Ω–∞</button>
                    <button class="btn btn-primary" onclick="updateDate()">üíæ –°–æ—Ö—Ä–∞–Ω–∏—Ç—å</button>
                </div>
            `);
        }
        
        function updateDate() {
            const from = document.getElementById('dateFrom').value;
            const to = document.getElementById('dateTo').value;
            
            if (!from || !to) {
                showNotification('–ó–∞–ø–æ–ª–Ω–∏—Ç–µ –æ–±–µ –¥–∞—Ç—ã', 'error');
                return;
            }
            
            if (new Date(to) < new Date(from)) {
                showNotification('–î–∞—Ç–∞ –¥–æ—Å—Ç–∞–≤–∫–∏ –Ω–µ –º–æ–∂–µ—Ç –±—ã—Ç—å —Ä–∞–Ω—å—à–µ –¥–∞—Ç—ã –æ—Ç–ø—Ä–∞–≤–∫–∏', 'error');
                return;
            }
            
            const city = scheduleData.cities.find(c => c.id === currentEditCity);
            const date = city.dates.find(d => d.id === currentEditDate);
            
            date.from = from;
            date.to = to;
            city.dates.sort((a, b) => new Date(a.from) - new Date(b.from));
            
            saveData();
            renderSchedule();
            closeModal();
            showNotification('–û—Ç–≥—Ä—É–∑–∫–∞ –æ–±–Ω–æ–≤–ª–µ–Ω–∞', 'success');
        }
        
        // –£–¥–∞–ª–µ–Ω–∏–µ –æ—Ç–≥—Ä—É–∑–∫–∏
        function deleteDate(cityId, dateId) {
            if (!confirm('–£–¥–∞–ª–∏—Ç—å —ç—Ç—É –æ—Ç–≥—Ä—É–∑–∫—É?')) return;
            
            const city = scheduleData.cities.find(c => c.id === cityId);
            city.dates = city.dates.filter(d => d.id !== dateId);
            
            saveData();
            renderSchedule();
            showNotification('–û—Ç–≥—Ä—É–∑–∫–∞ —É–¥–∞–ª–µ–Ω–∞', 'success');
        }
        
        // –î–æ–±–∞–≤–ª–µ–Ω–∏–µ –Ω–æ–≤–æ–≥–æ –≥–æ—Ä–æ–¥–∞
        function openAddCityModal() {
            openModal(`
                <h3>üèôÔ∏è –î–æ–±–∞–≤–∏—Ç—å –Ω–∞–ø—Ä–∞–≤–ª–µ–Ω–∏–µ</h3>
                <div class="form-group">
                    <label>–ù–∞–∑–≤–∞–Ω–∏–µ –≥–æ—Ä–æ–¥–∞/–Ω–∞–ø—Ä–∞–≤–ª–µ–Ω–∏—è</label>
                    <input type="text" id="cityName" placeholder="–ù–∞–ø—Ä–∏–º–µ—Ä: –ú–û–°–ö–í–ê" required>
                </div>
                <div class="form-group">
                    <label>–ò–∫–æ–Ω–∫–∞</label>
                    <select id="cityIcon">
                        <option value="üöö">üöö –ì—Ä—É–∑–æ–≤–∏–∫</option>
                        <option value="üì¶">üì¶ –ö–æ—Ä–æ–±–∫–∞</option>
                        <option value="üéÅ">üéÅ –ü–æ–¥–∞—Ä–æ–∫</option>
                        <option value="üè≠">üè≠ –°–∫–ª–∞–¥</option>
                        <option value="üè¢">üè¢ –ó–¥–∞–Ω–∏–µ</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>
                        <input type="checkbox" id="citySpecial"> –û—Å–æ–±–æ–µ –Ω–∞–ø—Ä–∞–≤–ª–µ–Ω–∏–µ (–∫—Ä–∞—Å–Ω—ã–π –∑–∞–≥–æ–ª–æ–≤–æ–∫)
                    </label>
                </div>
                <div class="modal-buttons">
                    <button class="btn btn-secondary" onclick="closeModal()">–û—Ç–º–µ–Ω–∞</button>
                    <button class="btn btn-primary" onclick="addCity()">‚ûï –î–æ–±–∞–≤–∏—Ç—å</button>
                </div>
            `);
        }
        
        function addCity() {
            const name = document.getElementById('cityName').value.trim().toUpperCase();
            const icon = document.getElementById('cityIcon').value;
            const special = document.getElementById('citySpecial').checked;
            
            if (!name) {
                showNotification('–í–≤–µ–¥–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ –Ω–∞–ø—Ä–∞–≤–ª–µ–Ω–∏—è', 'error');
                return;
            }
            
            const newId = Math.max(...scheduleData.cities.map(c => c.id)) + 1;
            
            scheduleData.cities.push({
                id: newId,
                name,
                icon,
                special,
                dates: []
            });
            
            saveData();
            renderSchedule();
            closeModal();
            showNotification('–ù–∞–ø—Ä–∞–≤–ª–µ–Ω–∏–µ –¥–æ–±–∞–≤–ª–µ–Ω–æ', 'success');
        }
        
        // ===== –£–í–ï–î–û–ú–õ–ï–ù–ò–Ø =====
        function showNotification(message, type = 'info') {
            const notif = document.getElementById('notification');
            const icons = { success: '‚úÖ', error: '‚ùå', info: '‚ÑπÔ∏è' };
            
            notif.className = `notification ${type}`;
            notif.querySelector('.notification-icon').textContent = icons[type];
            notif.querySelector('.notification-text').textContent = message;
            notif.classList.add('show');
            
            setTimeout(() => notif.classList.remove('show'), 4000);
        }
        
        // ===== –ò–ù–ò–¶–ò–ê–õ–ò–ó–ê–¶–ò–Ø =====
        function init() {
            renderSchedule();
            updateDeletedCounter();
            
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º –ø—Ä–æ—Å—Ä–æ—á–µ–Ω–Ω—ã–µ –¥–∞—Ç—ã –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ
            removeExpiredDates();
            
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º –∫–∞–∂–¥—É—é –º–∏–Ω—É—Ç—É
            setInterval(removeExpiredDates, 60000);
            
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º –≤ –ø–æ–ª–Ω–æ—á—å
            const now = new Date();
            const tomorrow = new Date(now);
            tomorrow.setDate(tomorrow.getDate() + 1);
            tomorrow.setHours(0, 0, 5, 0); // 00:00:05
            const msUntilMidnight = tomorrow - now;
            
            setTimeout(() => {
                removeExpiredDates();
                setInterval(removeExpiredDates, 24 * 60 * 60 * 1000); // –∫–∞–∂–¥—ã–µ 24 —á–∞—Å–∞
            }, msUntilMidnight);
        }
        
        // –ó–∞–ø—É—Å–∫
        init();
        
        // –ö–ª–∞–≤–∏—à–∞ Escape –¥–ª—è –∑–∞–∫—Ä—ã—Ç–∏—è –º–æ–¥–∞–ª–∫–∏
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') closeModal();
        });
    </script>
</body>
</html>